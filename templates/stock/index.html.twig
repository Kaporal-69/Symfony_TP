{% extends 'base.html.twig' %}

{% block title %}Stocks{% endblock %}

{% block body %}
    <h1>Stocks</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>Magasin</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td> {{ stock.product }} </td>
                <td> {{ stock.magasin }}</td>
                <td>{{ stock.quantite }}</td>
                <td>{{ stock.prix }}</td>
                <td>
                    <a href="{{ path('stock_show', {'id': stock.id}) }}">Voir</a>
                    <a href="{{ path('stock_edit', {'id': stock.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stock_new') }}">Create new</a>
{% endblock %}
