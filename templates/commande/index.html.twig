{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <h1>Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Magasin</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.magasin }}</td>
                <td>{% if commande.etat == 1 %}
                        Non validée
                    {% elseif commande.etat == 2 %}
                        Validée <a href="{{ path('rendez_vous_new', {'id_commande': commande.id}) }}">Prendre rendez-vous?</a>
                    {% elseif commande.etat == 3 %} 
                        En préparation
                    {% elseif commande.etat == 4 %} 
                        Récupérée
                    {% endif %}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
