{% extends 'base.html.twig' %}

{% block title %}Magasins{% endblock %}

{% block body %}
    <h1>Magasins</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magasin in magasins %}
            <tr>
                <td>{{ magasin.id }}</td>
                <td>{{ magasin.name }}</td>
                <td>
                 
                    <a href="{{ path('magasin_show', {'id': magasin.id}) }}">Voir</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">Modifier</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('magasin_new') }}">Create new</a>
    {% endif %}
{% endblock %}
