{% extends 'base.html.twig' %}

{% block title %}Rendez-vous{% endblock %}

{% block body %}
    <h1>Rendez-vous</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour</th>
                <th>Horaire</th>
                <th>Magasin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.jour ? rendez_vou.jour|date('d/m/Y') : '' }}</td>
                <td>{{ rendez_vou.horaire }} h</td>
                <td>{{ rendez_vou.magasin }}</td>
                <td>
                    <a href="{{ path('rendez_vous_show', {'id': rendez_vou.id}) }}">Voir</a>
                    <a href="{{ path('rendez_vous_edit', {'id': rendez_vou.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('rendez_vous_new') }}">Create new</a> #}
{% endblock %}
